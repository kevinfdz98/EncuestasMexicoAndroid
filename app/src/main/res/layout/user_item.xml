<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kevin Fernandez"
            android:maxLines="1"
            android:layout_toStartOf="@id/tex_view_type_user"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:id="@+id/tex_view_type_user"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="Administrador"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="kevinfdz98@gmail.com"
                android:layout_below="@id/text_view_name_user"
                />

    </RelativeLayout>

</androidx.cardview.widget.CardView>